<% if @driver.errors.messages.any? %>
  <section class="error-messages">
    There were some issues with your submission
    <ul>
      <% @driver.errors.messages.each do |column, problem_list| %>
        <% problem_list.each do |problem| %>
          <li>
            <%= column %>: <%= problem %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </section>
<% end %>

<%= form_with model: @driver, class: 'driver-form' do |f| %>
  <p>Please fill out this driver's information</p>

  <div>
    <%= f.label :name, "Please enter a name" %>
    <%= f.text_field :name, placeholder: "Driver Name" %>
  </div>

  <div>
    <%= f.label :vin, "Please enter a VIN" %>
    <%= f.text_field :vin, placeholder: "4RA34A5K3YPN8H5P4" %>
  </div>

  <div>
    <%= f.label :car_make, "Please enter a car make" %>
    <%= f.select :car_make, ["Toyota", "Tesla", "Honda", "BMW", "Mercedes"] %>
  </div>

   <div>
    <%= f.label :car_model, "Please enter a car model" %>
    <%= f.text_field :car_model, placeholder: "Car Model" %>
  </div>


  <%= f.submit button_text %>

<% end %>