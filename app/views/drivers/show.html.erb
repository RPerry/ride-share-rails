<h2>Driver Details Page</h2>

<p>
  Name: <%= @driver.name %>
</p>
<p>
  VIN: <%= @driver.vin %>
</p>
<p>
  Car Make: <%= @driver.car_make %>
</p>
<p>
  Car Model: <%= @driver.car_model %>
</p>
<p>
  Total Earnings: $<%= @driver.total_earnings %>
</p>
<p>
  Average Rating: <%= @driver.average_rating.round(2)%>
</p>

<h2><%= @driver.name %>'s Trips</h2>

<table>
  <tr>
    <th>ID</th>
    <th>Date</th>
    <th>Driver</th>
    <th>Passenger</th>
    <th>Price</th>
    <th>Rating</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @driver.trips.each do |t| %>
  <tr>
  <td><%= link_to t.id, trip_path(t) %></td>
  <td><%= t.date%></td>
   <% driver = Driver.find_by(id: t.driver_id)%>
  <td><%= t.driver.name%></td>
  <% passenger = Passenger.find_by(id: t.passenger_id)%>
  <td> <%= link_to t.passenger.name, passenger_path(t.passenger_id)%></td>
  <td>$<%= t.cost%> </td>
  <td><%= t.rating%></td>
  <td><%= link_to "Edit", edit_driver_path(@driver)%></td>
  <td><%= link_to "Delete", driver_path(@driver), method: :delete, data: { confirm: "Really really?" } %></td>
  </tr>
  <% end %>
</table>


